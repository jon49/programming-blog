.post-tag
  margin 0 0.1em
  padding 0.3em 1em
  color #fff
  background color-fireRed
  font-size 80%

.navlinks
  font-size 120%
  padding 2em 0 4em 0

.navlinks-prev
  width 45%
  float left

.navlinks-next
  width 45%
  float right
  text-align right

//The content `<div>` is where all your content goes.
.content 
   margin 0 auto
   padding 0 2em
   max-width max-content-width
   margin-bottom 50px
   line-height 1.6em
   
.content a:link
.content a:visited
.content a:hover
.content a:active
   color color-font-body
   
.header 
    margin 0
    color #333
    text-align center
    padding 2.5em 2em 0

.header h1 
   margin 0.2em 0
   font-size 3em
   font-weight 300
   
.header h2 
   font-weight 300
   color color-border
   padding 0
   margin-top 0
      
.subTitle
   max-width max-content-width
   margin-left auto
   margin-right auto
   padding-top 6px
   overflow hidden

.content h2
   margin 50px 0 20px 0
   font-weight 300
   color #888

.footer
   font-size 60%
   text-align center
   padding 1em 0
   color #CCC
//fancy subtitle   
.header h2
   margin 0 0 2em 0
   
.fancy
   line-height 0.5
   text-align center
   
.fancy span
   display inline-block
   position relative
   
.fancy span:before
.fancy span:after
   content ''
   position absolute
   height 5px
   border-bottom 1px solid color-border
   border-top 1px solid color-border
   top 0
   width 100%
   
.fancy span:before
   right 100%
   margin-right 15px
   
.fancy span:after
   left 100%
   margin-left 15px
   
//The `#menu` `<div>` is the parent `<div>` that contains the `.pure-menu` that appears on the left side of the page.

//By using the combination of `position fixed top 0 bottom 0`, we can make the menu have 100% height and be fixed on the page as the rest of it scrolls.
.menu 
   left 100%
   height 35 px
   font-size 16px
   text-align center
   background-color color-background-highlight
   
.menu ul
   height auto
   padding 8px 0px
   margin 0px

.menu a
   text-decoration none
   color color-font-body
   padding 8px
   display inline
   padding 10px
   
.menu a:hover
   color #FFF
   background-color color-font-main

#footer-menu
   background-color color-background-main

#footer-menu a
   border-radius 15px
   
#main
   left menu-width
   width 600px
   display block
   margin-left auto
   margin-right auto
   
#forSwitch
   color color-fireRed
   font-size 1em
   float left
   visibility hidden
      
